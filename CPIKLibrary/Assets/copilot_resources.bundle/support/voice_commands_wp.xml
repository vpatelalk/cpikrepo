<?xml version="1.0" encoding="utf-8"?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.0">
	<CommandSet xml:lang="en-us">
		<CommandPrefix> CoPilot </CommandPrefix>
		<Example> Take me home </Example>
		<Command Name="takeMe">
			<Example> Take me home </Example>
			<ListenFor> [Take me] {favoritePlaces} </ListenFor>
			<Feedback> Taking you {favoritePlaces} </Feedback>
			<Navigate Target="/MainPage.xaml"/>
		</Command>

		<PhraseList Label="favoritePlaces">
			<Item> home </Item>
			<Item> to home </Item>
			<Item> to work </Item>
		</PhraseList>

	</CommandSet>

